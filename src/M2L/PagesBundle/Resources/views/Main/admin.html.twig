{% extends 'M2LPagesBundle::layout.html.twig' %}

{% block body %}

    <div class="jumbotron">
        <div class="container">
            
            <h2>Liste des messages</h2>
            
            <table id="message" class="table table-striped table-bordered" cellspacing="0" width="100%"> 
                <thead> 
                    <tr> 
                        <th>Nom et Prénom</th> 
                        <th>Email</th>
                        <th>Objet</th> 
                        <th>Message</th> 
                        <th>Date d'écriture</th>
                    </tr> 
                </thead> 
                <tbody>
                </tbody>
            </table> 
            
        </div>
    </div>

{% endblock %}

{% block javascripts %}
{{ parent() }} 
<script src="https://code.jquery.com/jquery-1.11.2.min.js"></script> 
<script src="https://cdn.datatables.net/1.10.6/js/jquery.dataTables.min.js"></script> 
<script>
    $(function ()
    {
        $('#message').DataTable({
            "processing": true,
            "serverSide": true,
            "scrollX": true,
            "scrollCollapse": true,
            "language": 
             {
                "zeroRecords": "La liste est vide",
                "infoEmpty": "La liste est vide",
                "search": "Recherche"
            },
            "paging":   false,
            "ordering": false,
            "info":     false,
            "ajax": "{{ path('m2l_message_admin') }}",
            "sAjaxDataProp": "data",
            "pageLength": 5,
            "columns": [
                {"data": "name"},
                {"data": "email"},
                {"data": "subject"},
                {"data": "content"},
                {"data": "createdAt"}
            ],
            "order": [[1, 'asc']]
        });
    });
</script>

{% endblock %}